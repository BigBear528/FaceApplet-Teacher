/* pages/home/index.wxss */
.top {
	position: fixed;
	top: 5px;
	margin: 0 10rpx;
	padding: 40rpx 20rpx 20rpx 20rpx;
	background-color: #fff;
}

.top .input {
	background-color: #eee;
	border-radius: 24rpx;
	overflow: hidden;
	height: 80rpx;
	padding-left: 16rpx;
	margin-bottom: 40rpx;
}

.flex {
	display: flex;
}

.flex .selection {
	width: 30%;
	background-color: #eee;
	border-radius: 24rpx;
	overflow: hidden;
	height: 80rpx;
	padding-left: 16rpx;
	margin-bottom: 40rpx;
	margin-right: 5px;
}

.flex .btn {
	width: 30%;
	height: 80rpx;
	line-height: 80rpx;
	color: #fff;
	background-color: #409EFF;
	border-radius: 16rpx;
}


.bottom {
	margin: 320rpx 10rpx 10rpx 10rpx;

}


.item {
	display: flex;
	justify-content: space-between;
	padding: 10rpx;
	background-color: #fff;
	border-radius: 10px;
	margin-bottom: 10rpx;

}

.item .left {
	font-size: 30rpx;
}

.item .icon {
	width: 80rpx;
	height: 80rpx;
	line-height: 100px;
}


.item .className {
	font-size: 20px;
	margin: 10px;
}

.item .classStatus {
	margin: 5px 10px;
	color: #409EFF;
}

.item .classType {
	margin: 5px 10px;
	color: #67C23A;
}